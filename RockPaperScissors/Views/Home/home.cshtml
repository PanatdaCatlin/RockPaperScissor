  <title>RockPaperScissor</title>
</head>
<body>
  <div class="container">
    <h1>Lets Play Rock Paper Scissor!!</h1>
    @* <img class="RockPaperScissor" src='~/img/green.jpg'/> *@
    <form action="/game" method = "POST">
      <div class="form-group">
        <label for="player-one-name">Enter Player One's Name</label>
        <input id ="player-one-name" name="player-one-name" class ="form-control" type="text">
      </div>
      <div class="form-group">
        <label for="player-two-name">Enter Player Two's Name</label>
        <input id ="player-two-name" name="player-two-name" class ="form-control" type="text">
      </div>
        <button type="submit" name="button">Play!</button>
      </form>
    </div>
